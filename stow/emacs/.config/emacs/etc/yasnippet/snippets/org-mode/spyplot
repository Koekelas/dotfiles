  from numpy import pi, linspace, sin, cos
  from matplotlib.pyplot import subplots

  $0xs = linspace(-pi, pi)
  fig, ax = subplots()
  ax.plot(xs, sin(xs), label='sin(x)')
  ax.plot(xs, cos(xs), label='cos(x)')
  ax.set_xlabel('x')
  ax.set_ylabel('y')
  ax.legend()
  fig.savefig(path)
  return path
#+END_SRC