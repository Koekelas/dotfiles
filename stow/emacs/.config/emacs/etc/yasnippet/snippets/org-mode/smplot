#+BEGIN_SRC octave :var path="images/plot-${1:name}.png" :results file :exports results
  fig = figure('visible', 'off');
  $0fplot(@(x) [sin(x), cos(x)], [-pi, pi]);
  xlabel('x');
  ylabel('y');
  legend('sin(x)', 'cos(x)');
  saveas(fig, path);
  ans = path;
#+END_SRC